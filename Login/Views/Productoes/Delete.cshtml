@model Login.Models.Producto

@{
ViewData["Title"] = "Delete";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Está seguro que desea eliminar este elemento?</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Nombre del producto:</dt>
            <dd>@Html.DisplayFor(model => model.ProNombre)</dd>

            <dt>Descripción del producto:</dt>
            <dd>@Html.DisplayFor(model => model.ProDescripcion)</dd>

            <dt>Precio del producto:</dt>
            <dd>@Html.DisplayFor(model => model.ProPrecio)</dd>

            <dt>Stock del producto:</dt>
            <dd>@Html.DisplayFor(model => model.ProStock)</dd>

            <dt>Imagen del producto:</dt>
            <dd>
                @if (Model.ProImagen != null && Model.ProImagen.Length > 0)
                {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProImagen)" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                }
                else
                {
                <span>No hay imagen cargada</span>
                }
            </dd>

            <dt>Categoría del producto:</dt>
            <dd>@Html.DisplayFor(model => model.Categoria.CatNombre)</dd>

            <dt>Subcategoría del producto:</dt>
            <dd>@Html.DisplayFor(model => model.Subcategoria.SubcNombre)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </form>
    </div>
</div>
