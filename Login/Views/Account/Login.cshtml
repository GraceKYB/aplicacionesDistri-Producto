@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilos para el formulario de inicio de sesión */
        .form-container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        }

        /* Estilos para los campos de entrada */
        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        /* Estilos para el botón de inicio de sesión */
        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #004d40;
            border: 1px solid #004d40;
            border-radius: 3px;
            cursor: pointer;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: teal;
                border-color: black;
            }

        /* Estilos para el enlace de "¿Olvidó su contraseña?" */
        .forgot-password {
            display: block;
            text-align: center;
            margin-top: 10px;
            color: #004d40;
        }

            .forgot-password:hover {
                text-decoration: none;
                color: #004d40;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h1 class="mb-4">Iniciar Sesión</h1>

        @model Login.ViewModels.LoginViewModel

        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Correo</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            <a asp-action="ForgotPassword" class="forgot-password d-block mt-3">¿Olvidó su contraseña?</a>
        </form>
    </div>
</body>
</html>
